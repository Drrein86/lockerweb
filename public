    <script>
        let ws = null;
        let lockerId = 1;
        const cells = ['A1', 'A2', 'A3', 'B1', 'B2', 'B3', 'C1', 'C2', 'C3', 'D1', 'D2', 'D3', 'E1', 'E2', 'E3'];
        
        // ×™×¦×™×¨×ª ×”×ª××™×
        function createCells() {
            const grid = document.getElementById('cellGrid');
            grid.innerHTML = '';
            
            cells.forEach(cellCode => {
                const cell = document.createElement('div');
                cell.className = 'cell';
                cell.innerHTML = `
                    <div style="font-size: 24px; margin-bottom: 10px;">ğŸ”’</div>
                    <div style="font-weight: bold;">${cellCode}</div>
                    <div style="font-size: 12px; margin-top: 5px;">×¡×’×•×¨</div>
                `;
                cell.onclick = () => simulateOpen(cellCode);
                grid.appendChild(cell);
            });
        }
        
        // ×”×ª×—×‘×¨×•×ª ×œ×©×¨×ª
        function connect() {
            lockerId = document.getElementById('lockerId').value || 1;
            
            // × ×¡×” ×œ×”×ª×—×‘×¨ ×œ×©×¨×ª ×”××§×•××™ ××• ×œ×©×¨×ª production
            const wsUrl = window.location.hostname === 'localhost' 
                ? 'ws://localhost:8081' 
                : `wss://${window.location.hostname.replace('https://', '')}:8081`;
            
            try {
                ws = new WebSocket(wsUrl);
                
                ws.onopen = () => {
                    updateStatus('ğŸŸ¢ ××—×•×‘×¨ ×œ×©×¨×ª', true);
                    
                    // ×¨×™×©×•× ×”×œ×•×§×¨
                    ws.send(JSON.stringify({
                        type: 'register',
                        lockerId: parseInt(lockerId)
                    }));
                    
                    log(`ğŸ”— ×”×ª×—×‘×¨ ×œ×©×¨×ª ×›×œ×•×§×¨ ${lockerId}`);
                };
                
                ws.onmessage = (event) => {
                    try {
                        const data = JSON.parse(event.data);
                        handleMessage(data);
                    } catch (error) {
                        log(`âŒ ×©×’×™××” ×‘×¤×¢× ×•×— ×”×•×“×¢×”: ${error.message}`);
                    }
                };
                
                ws.onclose = () => {
                    updateStatus('ğŸ”´ ×œ× ××—×•×‘×¨ ×œ×©×¨×ª', false);
                    log('ğŸ“¡ ×”×—×™×‘×•×¨ × ×¡×’×¨');
                };
                
                ws.onerror = (error) => {
                    log(`âŒ ×©×’×™××ª ×—×™×‘×•×¨: ${error.message || '×œ× × ×™×ª×Ÿ ×œ×”×ª×—×‘×¨ ×œ×©×¨×ª'}`);
                    updateStatus('ğŸ”´ ×©×’×™××ª ×—×™×‘×•×¨', false);
                };
                
            } catch (error) {
                log(`âŒ ×©×’×™××” ×‘×™×¦×™×¨×ª ×”×—×™×‘×•×¨: ${error.message}`);
                updateStatus('ğŸ”´ ×©×’×™××ª ×—×™×‘×•×¨', false);
            }
        }
        
        // ×”×ª× ×ª×§×•×ª
        function disconnect() {
            if (ws) {
                ws.close();
                ws = null;
            }
            updateStatus('ğŸ”´ ×œ× ××—×•×‘×¨ ×œ×©×¨×ª', false);
            log('ğŸ”Œ ×”×ª× ×ª×§×•×ª ×™×“× ×™×ª');
        }
        
        // ×˜×™×¤×•×œ ×‘×”×•×“×¢×•×ª ××”×©×¨×ª
        function handleMessage(data) {
            log(`ğŸ“¨ ×”×•×“×¢×” ××”×©×¨×ª: ${JSON.stringify(data, null, 2)}`);
            
            switch(data.type) {
                case 'registered':
                    log(`âœ… ×œ×•×§×¨ ${data.lockerId} × ×¨×©× ×‘×”×¦×œ×—×”`);
                    break;
                    
                case 'openCell':
                    log(`ğŸ”“ ×¤×§×•×“×ª ×¤×ª×™×—×” ×œ×ª× ${data.cellCode}`);
                    openCell(data.cellCode);
                    break;
                    
                default:
                    log(`â“ ×”×•×“×¢×” ×œ× ××–×•×”×”: ${data.type}`);
            }
        }
        
        // ×¤×ª×™×—×ª ×ª× (×× ×™××¦×™×”)
        function openCell(cellCode) {
            const cells = document.querySelectorAll('.cell');
            
            cells.forEach(cell => {
                const cellCodeElement = cell.querySelector('div:nth-child(2)');
                if (cellCodeElement && cellCodeElement.textContent === cellCode) {
                    // ×× ×™××¦×™×™×ª ×¤×ª×™×—×”
                    cell.classList.add('opening');
                    cell.innerHTML = `
                        <div style="font-size: 24px; margin-bottom: 10px;">ğŸ”“</div>
                        <div style="font-weight: bold;">${cellCode}</div>
                        <div style="font-size: 12px; margin-top: 5px;">×¤×•×ª×—...</div>
                    `;
                    
                    // ×œ××—×¨ 2 ×©× ×™×•×ª - ×ª× ×¤×ª×•×—
                    setTimeout(() => {
                        cell.classList.remove('opening');
                        cell.classList.add('open');
                        cell.innerHTML = `
                            <div style="font-size: 24px; margin-bottom: 10px;">ğŸŸ¢</div>
                            <div style="font-weight: bold;">${cellCode}</div>
                            <div style="font-size: 12px; margin-top: 5px;">×¤×ª×•×—!</div>
                        `;
                        
                        // ×œ××—×¨ 5 ×©× ×™×•×ª - ×—×–×¨×” ×œ××¦×‘ ×¡×’×•×¨
                        setTimeout(() => {
                            cell.classList.remove('open');
                            cell.innerHTML = `
                                <div style="font-size: 24px; margin-bottom: 10px;">ğŸ”’</div>
                                <div style="font-weight: bold;">${cellCode}</div>
                                <div style="font-size: 12px; margin-top: 5px;">×¡×’×•×¨</div>
                            `;
                            log(`ğŸ”’ ×ª× ${cellCode} × ×¡×’×¨ ××•×˜×•××˜×™×ª`);
                        }, 5000);
                        
                    }, 2000);
                    
                    break;
                }
            });
        }
        
        // ×¡×™××•×œ×¦×™×” ×©×œ ×¤×ª×™×—×” ×™×“× ×™×ª (×œ×‘×“×™×§×”)
        function simulateOpen(cellCode) {
            log(`ğŸ§ª ×¡×™××•×œ×¦×™×” ×™×“× ×™×ª ×©×œ ×¤×ª×™×—×ª ×ª× ${cellCode}`);
            openCell(cellCode);
        }
        
        // ×¢×“×›×•×Ÿ ×¡×˜×˜×•×¡
        function updateStatus(message, connected) {
            const status = document.getElementById('status');
            status.textContent = message;
            status.className = `status ${connected ? 'connected' : 'disconnected'}`;
        }
        
        // ×”×•×¡×¤×ª ×¨×©×•××” ×œ×™×•××Ÿ
        function log(message) {
            const logElement = document.getElementById('log');
            const entry = document.createElement('div');
            entry.className = 'log-entry';
            entry.textContent = `${new Date().toLocaleTimeString('he-IL')} - ${message}`;
            logElement.appendChild(entry);
            logElement.scrollTop = logElement.scrollHeight;
        }
        
        // ××ª×—×•×œ ×”×“×£
        createCells();
        
        // ×”×ª×—×‘×¨×•×ª ××•×˜×•××˜×™×ª ×‘×˜×¢×™× ×ª ×”×“×£
        setTimeout(() => {
            log('ğŸš€ ×× ×¡×” ×œ×”×ª×—×‘×¨ ××•×˜×•××˜×™×ª...');
            connect();
        }, 1000);
    </script>
